- name: install vim
  type: homebrew
  item: vim

- name: create tmp directory
  type: directory
  destination: <%= tmp_dir %>

- name: clone dotfile
  type: git
  repository: <%= remote_dotfile_repo %>
  destination: <%= dotfile_path %>

- name: link dotfile to hgoe
  type: link
  source: <%= vim_config_in_dotfile %>
  destination: <%= dot_vim_path %>
